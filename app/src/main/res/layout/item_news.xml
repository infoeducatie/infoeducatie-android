<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:elevation="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/item_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Au început înscrierile!"
            android:textColor="@color/item_news_text_primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_news_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:text="Echipa InfoEducație are plăcerea să vă anunțe, că astăzi luni 7 Iulie 2015 formularul destinat înscrierierii proiectelor în concurs a fost deschis. Pentru înscrierea în concurs vă rugăm să vă creați un cont nou, folosind formularul de înregistrare."
            android:textColor="@color/item_news_text_primary"
            android:textSize="14sp" />

    </LinearLayout>


</android.support.v7.widget.CardView>