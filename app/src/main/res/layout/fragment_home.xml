<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/home_fragment_background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.infoeducatie.app.fragments.HomeFragment">

        <TextView
            android:id="@+id/fragment_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="InfoEducatie"
            android:textColor="@color/home_fragment_text_primary"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/fragment_home_motto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text=""
            android:textColor="@color/home_fragment_text_primary"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/fragment_home_table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_home_participants_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/msg_participants_caps"
                    android:textColor="@color/home_fragment_text_primary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fragment_home_participants_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/home_fragment_text_secondary"
                    android:textSize="65sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:alpha="0.3"
                android:background="@color/home_fragment_text_primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_home_projects_title"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/msg_projects_caps"
                    android:textColor="@color/home_fragment_text_primary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fragment_home_projects_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/home_fragment_text_secondary"
                    android:textSize="65sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:alpha="0.3"
                android:background="@color/home_fragment_text_primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_home_counties_title"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/msg_counties_caps"
                    android:textColor="@color/home_fragment_text_primary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fragment_home_counties_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textColor="@color/home_fragment_text_secondary"
                    android:textSize="65sp" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/fragment_home_news_talks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_fragment_home_button"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="9dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="9dp"
            android:text="@string/msg_talks_caps"
            android:textColor="@color/home_fragment_text_primary"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/fragment_home_news_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"

            android:background="@drawable/selector_fragment_home_button"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="9dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="9dp"
            android:text="È˜TIRI (3)"
            android:textColor="@color/home_fragment_text_primary"
            android:textSize="16sp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/fragment_home_edition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:text=""
            android:textColor="@color/home_fragment_text_primary"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>